{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="name">Name:</label>
        {{ form_widget(form.Name,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Name'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.Name) }}
        </div>
    </div>
    <div class="form-group">
        <label for="category">Price:</label>
        {{ form_widget(form.Price,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Price'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="description">Quantily:</label>
        {{ form_widget(form.Quantily,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Quantily'
            }
        }) }}
    </div>
    

    <input type="submit" name="create_part" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}

